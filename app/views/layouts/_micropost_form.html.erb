<div class="container micropost-container">
  <h1><i class="fas fa-pencil-alt"></i>記録する</h1>
  <%= form_with(model: Micropost.new, url: microposts_path, local: true, multipart: true) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>
    <div class="form-group">
      <%= form.text_area :memo, class: 'form-control', placeholder: "メモを加えてください" %>
    </div>
    <div class="form-group">
      <%= form.file_field :picture %>
    </div>
    <div class="form-group">
      <%= form.submit "記録する", class: 'btn btn-lg form-submit' %>
    </div>
  <% end %>
</div>
